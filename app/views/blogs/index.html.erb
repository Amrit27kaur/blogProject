
<style>

  #wrapper{
    width:1100px;
    margin:0 auto;
  }
  .img
  {
    height: 500px;
    width: 100%;
  }
    .nav
    {
      margin-bottom:0px;


    }

    .cards
    {
      margin-top: 30px;
      height:400px;
    }

    .card{
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
      text-align: center;

    }


</style>


<div id="wrapper">

      <div class="row">

              <div class="col-lg-12 navgation">
                    <nav class="navbar navbar-inverse nav">
                      <div class="container-fluid">
                        <div class="navbar-header">
                          <a class="navbar-brand" href="#">WebSiteName</a>


                        <ul class="nav navbar-nav navbar-right">
                          <%if user_signed_in? %>
                          <li><%= link_to('Logout', destroy_user_session_path, method: :delete)%></li>


                         <%else %>
                          <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                          <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>

                         <%end %>

                        </ul>
                        </div>
                      </div>
                    </nav>
              </div>

      </div>

      <div class="row ">

              <div class="col-lg-12">

                <img src="img.jpg" class="img">

               </div>
      </div>




                <div class="row cards cards">

                  <% @list_of_blogs.each do |blog| %>
                    <div class="col-lg-3">


                      <div class="card " >
                        <img class="card-img-top" src="im.jpg" alt="Card image " style="width:100%">
                        <div class="card-body">
                          <h4 class="card-title"><%= blog.title %></h4>
                          <p class="card-text"><%= blog.description %></p>
                          <p class="card-text"><%= blog.author %></p>
                          <a href="/blogs/<%= blog.id %>" class="btn btn-primary">See Profile</a>
                          <br><br>

                        </div>
                      </div>


                    </div>
                  <%end%>
                </div>


      </div>


