<style>

  #wrapper{
    width:1100px;
    margin:0 auto;
  }
  .img
  {
    height: 500px;
    width: 100%;
  }
  .nav
  {
    margin-bottom:0px;


  }

  .cards
  {

    margin-top: 30px;
    height:400px;
  }

  .card{
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    text-align: center;

  }
    .form
    {
      margin-top: 30px;

    }


</style>


<div id="wrapper">

  <div class="row">

    <div class="col-lg-12 navgation">
      <nav class="navbar navbar-inverse nav">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">DashBoard</a>

            <ul class="nav navbar-nav navbar-right">
              <%if user_signed_in? %>
                <li><%= link_to('Logout', destroy_user_session_path, method: :delete)%></li>
                <%end %>
                </ul>
          </div>
        </div>
      </nav>
    </div>

  </div>

  <div class="row ">

    <div class="col-lg-12">

      <img src="/img.jpg" class="img">

    </div>



      <div row="first_session ">
        <div class="col-lg-2 form">

          <a href="/blogs/new" class="btn btn-primary">Add new form</a>

        </div>

      <div class="col-lg-10">

        <div class="row cards cards">

          <% @result_blog.each do |blog| %>
            <div class="col-lg-3">


              <div class="card " >
                <img class="card-img-top" src="/im.jpg" alt="Card image " style="width:100%">
                <div class="card-body">
                  <h4 class="card-title"><%=blog.title %></h4>
                  <p class="card-text"><h5><%= blog.description %></h5></p>
                  <p class="card-text"><h5><%= blog.author %></h5></p>

                  <a href="/blogs/<%= blog.id %>" class="btn btn-primary">See Profile</a>

                  <%= link_to('delete', blog , :method => :delete, class:"btn btn-danger") %>
                  <br><br>

                  <a href="/blogs/<%= blog.id %>/edit" class = "btn btn-primary">Update</a>

                  <br><br>

                </div>
              </div>


            </div>
          <%end%>
        </div>

      </div>

    </div>
  </div>
  </div>





